<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tạo phiếu thu mới"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/tvNewCallcardMemberId"
        android:layout_width="310dp"
        android:paddingLeft="70dp"
        android:paddingRight="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Chọn người mượn"
        android:textStyle="bold"

        android:clickable="true"
        android:background="@drawable/for_result_button"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_add"
        />
    <TextView
        android:id="@+id/tvNewCallcardBookName"
        android:layout_width="310dp"
        android:paddingLeft="70dp"
        android:paddingRight="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:text="Chọn sách mượn"
        android:textStyle="bold"
        android:clickable="true"
        android:background="@drawable/for_result_button"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_margin="5dp"
        android:drawableStart="@drawable/ic_add"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày mượn"
            />
        <TextView
            android:id="@+id/tvNewCallcardBeginDate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="02-02-2022"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textAlignment="center"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày hết hạn"
            />
        <TextView
            android:id="@+id/tvNewCallcardExpiresDate"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:hint="02-02-2022"
            android:layout_margin="5dp"
            android:textAlignment="center"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:id="@+id/btnCancel"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="CANCEL"
            android:textColor="@color/light_ocean"
            android:textSize="20dp"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/button"/>
        <TextView
            android:id="@+id/btnOkay"
            android:layout_gravity="center_horizontal"
            android:layout_width="120dp"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp"
            android:text="OKAY"
            android:textColor="@color/light_ocean"
            android:textSize="20dp"
            android:clickable="true"
            android:gravity="center"
            android:background="@drawable/button"/>

    </LinearLayout>
</LinearLayout>